<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/platos"
    tools:context=".PlatosActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="1dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d23737"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <ImageButton
                android:id="@+id/volver_inicio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start"
                android:scaleType="fitCenter"
                android:background="@drawable/redondear"
                android:backgroundTint="#db4747"
                android:layout_margin="11dp"
                android:contentDescription="@string/textoDescriptivo_mesas_Boton1"
                app:srcCompat="@drawable/flechaizquierda"
                />

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:background="@drawable/redondear_logo"
                android:backgroundTint="#fefcf3"
                android:contentDescription="@string/textoDescriptivo_inicio_imgLogo"
                android:scaleType="fitCenter"
                android:layout_margin="11dp"
                app:srcCompat="@drawable/inicio_logo"
                tools:layout_editor_absoluteX="295dp"
                tools:layout_editor_absoluteY="8dp" />
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_productos"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>